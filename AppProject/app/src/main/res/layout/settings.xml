<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "#9debff">

    <!--FlashMath Logo-->
    <ImageView
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:src="@drawable/title"
        android:id="@+id/playTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioUsers"
        android:orientation="horizontal"
        android:paddingBottom="50sp"
        android:layout_above="@+id/goal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Boy-->
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/boy"
            android:background="@drawable/boy"
            android:button="@null"
            android:checked="false"
            android:layout_marginLeft="90dp"
            android:layout_alignBottom="@+id/playTitle" />

        <!-- Girl -->
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/girl"
            android:background="@drawable/girl"
            android:button="@null"
            android:layout_alignBottom="@+id/playTitle"
            android:layout_alignLeft="@id/boy"
            android:layout_marginLeft="40dp"/>

    </RadioGroup>

    <!-- Goal field -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/red_x"
        android:id="@+id/goal"
        android:layout_alignBottom="@+id/goalText"
        android:layout_toLeftOf="@+id/goalText"
        android:layout_toStartOf="@+id/goalText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/goalText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/playTitle"
        android:layout_alignEnd="@+id/playTitle" />


    <!-- Reward field -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/red_x"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/editText"
        android:layout_below="@+id/goal"
        android:layout_alignLeft="@+id/goalText"
        android:layout_alignStart="@+id/goalText" />


    <!-- Current stats field -->

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/red_x"
        android:id="@+id/imageView3"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <!-- Ok button -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save"
        android:textSize="25sp"
        android:background="#ffffff"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <!-- Cash in button -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash"
        android:id="@+id/cash"
        android:textSize="25sp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/save"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />


</RelativeLayout>