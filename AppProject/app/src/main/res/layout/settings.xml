<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "#9debff">

    <!--FlashMath Logo-->
    <ImageView
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:src="@drawable/title"
        android:id="@+id/playTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioUsers"
        android:orientation="horizontal"
        android:paddingBottom="50dp"
        android:layout_above="@+id/target"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Boy-->
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/boy"
            android:background="@drawable/boy"
            android:button="@null"
            android:checked="false"
            android:layout_alignBottom="@+id/playTitle"
            android:layout_marginLeft="90dp"/>

        <!-- Girl -->
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/girl"
            android:background="@drawable/girl"
            android:button="@null"
            android:layout_alignBottom="@+id/playTitle"
            android:layout_alignLeft="@id/boy"
            android:layout_marginLeft="40dp"/>

    </RadioGroup>

    <!-- Target field -->


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/target"
        android:id="@+id/target"
        android:layout_alignBottom="@+id/targetText"
        android:layout_alignLeft="@+id/playTitle"
        android:layout_alignStart="@+id/playTitle"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/targetText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/playTitle"
        android:layout_alignEnd="@+id/playTitle"
        android:layout_marginRight="22dp"/>


    <!-- Reward field -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/reward"
        android:id="@+id/reward"
        android:layout_below="@+id/target"
        android:layout_alignRight="@+id/target"
        android:layout_alignEnd="@+id/target"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/rewardText"
        android:layout_alignBottom="@+id/reward"
        android:layout_alignLeft="@+id/targetText"
        android:layout_alignStart="@+id/targetText" />


    <!-- Current stats field -->

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/stats"
        android:id="@+id/stats"
        android:layout_below="@+id/reward"
        android:layout_alignRight="@+id/reward"
        android:layout_alignEnd="@+id/reward" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:textSize="30sp"
        android:id="@+id/statsText"
        android:layout_alignBottom="@+id/stats"
        android:layout_alignLeft="@+id/rewardText"
        android:layout_alignStart="@+id/rewardText" />

    <!-- Save button -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save"
        android:textSize="25sp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/stats"
        android:layout_alignStart="@+id/stats"
        android:layout_marginBottom="15dp"/>

    <!-- Cash in button -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/cash"
        android:id="@+id/cash"
        android:textSize="25sp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/save"
        android:layout_alignRight="@+id/statsText"
        android:layout_alignEnd="@+id/statsText" />


</RelativeLayout>